<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0E7"
    tools:context="com.kraftsbay.kraftsbay.UserAccountActivity">



    <Button
        style="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:id="@+id/buttonSignout"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="#FF0000"
        android:text="LogOut"
        android:textColor="#F0F8FF"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/textViewEmailForAccount"
        android:layout_centerHorizontal="true" />

    <TextView
        style="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/textViewEmailForAccount"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:text="email"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="47dp"
        android:layout_marginTop="224dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        style="?android:textAppearanceLarge"
        android:textStyle="bold"
       android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSignout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:text="WELCOME" />


</RelativeLayout>
