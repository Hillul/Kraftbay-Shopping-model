<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kraftsbay.kraftsbay.ViewItemsActivity">

  <ScrollView
android:layout_width="368dp"
android:layout_height="495dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="100dp"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_descriptionn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_actualpricee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:singleLine="true" />


        <TextView
            android:id="@+id/tv_offerss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/bnBuy_Now"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/bnAdd_to_Card"
        android:text="Buy Now"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bnAdd_to_Card"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add to Card"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>

    </LinearLayout>
