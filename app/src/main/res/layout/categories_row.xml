<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/categories_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/categories_actualprice"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/categories_name"
            android:layout_alignLeft="@+id/categories_name"
            android:layout_alignStart="@+id/categories_name"
            android:textColor="#FF0000"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/categories_name"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:textSize="15dp"
            android:layout_toEndOf="@+id/categories_image"
            android:layout_toRightOf="@+id/categories_image"
            android:textStyle="bold"
            style="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:textSize="10dp"
            android:text="Handloom"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/categories_image"
            android:layout_toEndOf="@+id/categories_image" />

        <TextView
            android:id="@+id/categories_offers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/offers"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/categories_actualprice"
            android:layout_toEndOf="@+id/categories_actualprice"
            android:layout_toRightOf="@+id/categories_actualprice"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:text="TextView"
            android:textColor="#ff3300"
            android:layout_toRightOf="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</android.support.v7.widget.CardView>